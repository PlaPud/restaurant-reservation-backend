generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Customer {
  customerId String @id @default(uuid())
  fName String 
  lName String
  email String @unique
  phone String @unique
  isVerified Boolean @default(false)
  hashPassword String
  profileImgPath String @default("")
  reservations Reservation[]
}

model Restaurant {
  restaurantId String @id @default(uuid())
  name String
  phone String @unique
  email String @unique
  address String
  province String
  district String
  subDistrict String
  isVerified Boolean @default(false)
  hashPassword String
  profileImgPath String @default("")
  description String @default("")
  currentReserves Reservation[]
}

model Reservation {
  reserveId String @id @default(uuid())
  customerId String? 
  customer Customer? @relation(fields: [customerId], references: [customerId], onDelete: Cascade)
  restaurantId String
  restaurant Restaurant @relation(fields: [restaurantId], references: [restaurantId], onDelete: Cascade)
  lastModified String?
  seats Int
  reservePrice Int @default(0)
  reserveDate String
  payImgUrl String @default("")
  isPayed Boolean @default(false)
  isAttended Boolean @default(false)
}

model Admin {
  adminId String @id @default(uuid())
  fName String
  lName String
  hashPassword String
}